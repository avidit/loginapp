<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.avi.newapp.login"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="17" />
	<uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.avi.newapp.login.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.avi.newapp.login.Register"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name="com.avi.newapp.login.Welcome"
            android:label="@string/title_activity_welcome" >
        </activity>
        <activity
            android:name="com.avi.newapp.login.ChangeUsername"
            android:label="@string/title_activity_change_username" >
        </activity>
        <activity
            android:name="com.avi.newapp.login.ChangePassword"
            android:label="@string/title_activity_change_password" >
        </activity>
        <activity
            android:name="com.avi.newapp.login.RegisteredUsers"
            android:label="@string/title_activity_registered_users" >
        </activity>
        <activity
            android:name="com.avi.newapp.login.Camera"
            android:label="@string/title_activity_camera" >
        </activity>
    </application>

</manifest>
